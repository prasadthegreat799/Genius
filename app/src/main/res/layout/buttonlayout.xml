<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/loginViewsMargin">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/riddlesbtn"
                android:layout_width="150dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="10dp"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="Riddles"/>

            <Button
                android:id="@+id/factsbtn"
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="Math Riddles"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/imagedriddlesbtn"
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="What Am I ?"/>

            <Button
                android:id="@+id/riddleofthedaybtn"
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="Riddle Of the day"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/solveandearn"
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="Guess the word"/>

            <Button
                android:id="@+id/chat"

                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/roundbutton"
                android:layout_height="100dp"
                android:text="Group Chat"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>